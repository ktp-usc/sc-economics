generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String       @id @default(uuid())
  name        String
  type        PurchaseType
  description String
  price       Float
  status      Status       @default(Active)
  available   Int
  createdAt   DateTime     @default(now())
  image       String
}

model Purchase {
  id        String         @id @default(uuid())
  firstName String
  lastName  String
  email     String
  addressId String         @unique
  address   Address?       @relation(fields: [addressId], references: [id])
  itemName  String
  amount    Float
  type      PurchaseType
  reason    String
  date      DateTime       @default(now())
  status    PurchaseStatus
}

model Address {
  id       String    @id @default(uuid())
  street   String
  city     String
  state    String
  zipCode  String
  country  String
  purchase Purchase?
}

model DonationOption {
  id        String   @id @default(uuid())
  name      String
  amount    Float
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PurchaseType {
  donation
  workshop
  event
  merchandise
}

enum PurchaseStatus {
  completed
  pending
  refunded
}

enum Status {
  Active
  Inactive
}

