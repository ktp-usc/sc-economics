generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Item {
  id           String @id @default(uuid())
  name         String
  type         PurchaseType
  description  String
  price        Float
  capacity     Int?
  available    Int
  createdAt    DateTime @default(now())
  image        String
}


model Customer  {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String
  address   Address?
}

model Purchase {
  id          String @id @default(uuid())
  customerId  String
  itemName    String
  amount      Decimal
  type        PurchaseType
  reason      String
  date        DateTime @default(now())
  status      PurchaseStatus
}

model Address {
  id          String   @id @default(uuid())
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  String   @unique
  street      String
  city        String
  state       String
  zipCode     String
  country     String
}

enum PurchaseType{
  donation
  workshop
  event
  merchandise
}

enum PurchaseStatus{
  completed
  pending
  refunded
}



